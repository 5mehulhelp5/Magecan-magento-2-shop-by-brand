<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="shop_by_brand" translate="label" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Shop By Brand</label>
            <tab>sales</tab>
            <resource>Magecan_ShopByBrand::shop_by_brand</resource>
            <group id="brand_carousel" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Brand Carousel</label>
                <field id="infinite" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Infinite Loop</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="autoplay" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Autolay</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="autoplay_speed" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Autoplay Speed</label>
                    <validate>validate-number validate-greater-than-zero</validate>
                </field>  
                <field id="arrows" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Show Arrows</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="dots" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Show Dots</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                
            </group>   
        </section>
    </system>
</config>